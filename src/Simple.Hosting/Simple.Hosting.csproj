<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Company>YK</Company>
        <Authors>mail@yk.cc.ua</Authors>
        <LangVersion>latest</LangVersion>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <Nullable>enable</Nullable>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <RepositoryUrl>https://github.com/YuriyKarpenko/Simple</RepositoryUrl>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Version>0.1.0</Version>

        <PackageTags>Hosting</PackageTags>
        <Title>Simple hosting as MS</Title>
        <Description>Very light hosting, which used like a MS</Description>
        <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Simple.Configuration\Simple.Configuration.csproj" />
        <ProjectReference Include="..\Simple.DI\Simple.DI.csproj" />
        <ProjectReference Include="..\Simple.Logging\Simple.Logging.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\LICENSE.txt" Pack="True" PackagePath="\" />
        <None Include="..\README.md" Pack="True" PackagePath="\" />
    </ItemGroup>

</Project>
